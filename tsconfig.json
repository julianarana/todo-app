{
  "compilerOptions": {
    "incremental": false,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build/",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "public", "**/*.test.tsx", "**/*.test.ts"]
}
